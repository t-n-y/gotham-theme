<section class="blog-intro section-padding" id="blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>{{ label }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12 leftcol">
                <h5>{{ content.field_title.0['#context'].value }}</h5>
                {{ content.body.0['#text']|raw }}
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12 rightcol">
                <h5>{{ content.field_right_title.0['#context'].value }}</h5>
                {{ content.field_right_body.0['#text']|raw }}
            </div>
        </div>
    </div>
</section>


